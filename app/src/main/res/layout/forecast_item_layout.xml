<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/root_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1D71F2"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_4sdp"
        app:contentPaddingBottom="@dimen/_6sdp"
        app:contentPaddingLeft="@dimen/_16sdp"
        app:contentPaddingRight="@dimen/_16sdp"
        app:contentPaddingTop="@dimen/_6sdp"
        tools:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                tools:ignore="MissingPrefix"
                tools:text="03/20" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:id="@+id/image_view"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                tools:ignore="MissingPrefix"
                tools:text="04:00" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/temperature"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                tools:text="04:00" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>